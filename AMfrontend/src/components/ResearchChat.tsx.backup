import { useState, useRef, useEffect } from "react";
import { Button } from "./ui/button";
import { Input } from "./ui/input";
import { Card, CardContent, CardHeader, CardTitle } from "./ui/card";
import { Badge } from "./ui/badge";
import { ScrollArea } from "./ui/scroll-area";
import { Collapsible, CollapsibleContent, CollapsibleTrigger } from "./ui/collapsible";
import {
  Send,
  Loader2,
  ChevronDown,
  ChevronRight,
  Network,
  Brain,
  TrendingUp,
  CheckCircle2,
  AlertCircle,
} from "lucide-react";

type MessageType =
  | "user-message"
  | "status"
  | "super_agent_decision"
  | "planning_result"
  | "data_collected"
  | "agent_result"
  | "final_answer"
  | "error";

interface AgentResult {
  agent_name: string;
  signal: string;
  confidence: number;
  reasoning?: string;
}

interface Message {
  id: string;
  type: MessageType;
  role: "user" | "assistant";
  content?: string;
  data?: any;
  timestamp: Date;
}

const AGENT_COLORS = {
  macro_agent: "text-blue-400",
  ta_agent: "text-purple-400",
  onchain_agent: "text-cyan-400",
  default: "text-slate-400",
};

const SIGNAL_COLORS = {
  BULLISH: "border-emerald-500/50 text-emerald-400 bg-emerald-500/10",
  BEARISH: "border-red-500/50 text-red-400 bg-red-500/10",
  NEUTRAL: "border-yellow-500/50 text-yellow-400 bg-yellow-500/10",
};

const ResearchChat = () => {
  const [messages, setMessages] = useState<Message[]>([]);
  const [inputMessage, setInputMessage] = useState("");
  const [isProcessing, setIsProcessing] = useState(false);
  const [currentStatus, setCurrentStatus] = useState<string>("");
  const [superAgentDecision, setSuperAgentDecision] = useState<any>(null);
  const [planningResult, setPlanningResult] = useState<any>(null);
  const [agentResults, setAgentResults] = useState<AgentResult[]>([]);
  const [expandedSections, setExpandedSections] = useState<{
    [key: string]: boolean;
  }>({});

  const messagesEndRef = useRef<HTMLDivElement>(null);
  const chatContainerRef = useRef<HTMLDivElement>(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages, currentStatus]);

  const toggleSection = (section: string) => {
    setExpandedSections((prev) => ({
      ...prev,
      [section]: !prev[section],
    }));
  };

  const handleSendMessage = async () => {
    if (!inputMessage.trim() || isProcessing) return;

    const userMessage = inputMessage;
    setInputMessage("");

    // Add user message to chat
    const newUserMessage: Message = {
      role: "user",
      content: userMessage,
      timestamp: new Date().toISOString(),
    };
    setMessages((prev) => [...prev, newUserMessage]);

    // Reset states
    setIsProcessing(true);
    setCurrentStatus("AI思考中...");
    setSuperAgentDecision(null);
    setPlanningResult(null);
    setAgentResults([]);

    try {
      const response = await fetch("http://localhost:8000/api/v1/research/chat", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          message: userMessage,
          chat_history: messages.map((m) => ({
            role: m.role,
            content: m.content,
          })),
        }),
      });

      if (!response.ok) {
        throw new Error("Failed to connect to server");
      }

      const reader = response.body?.getReader();
      const decoder = new TextDecoder();

      if (!reader) {
        throw new Error("No response body");
      }

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;

        const chunk = decoder.decode(value);
        const lines = chunk.split("\n");

        for (const line of lines) {
          if (line.startsWith("data: ")) {
            const data = line.slice(6);
            if (data === "[DONE]") continue;

            try {
              const event = JSON.parse(data);

              switch (event.type) {
                case "status":
                  setCurrentStatus(event.data.message);
                  break;

                case "super_agent_decision":
                  setSuperAgentDecision(event.data);
                  setCurrentStatus("");
                  break;

                case "planning_result":
                  setPlanningResult(event.data);
                  break;

                case "data_collected":
                  setCurrentStatus(`数据收集完成 - BTC: $${event.data.btc_price?.toLocaleString()}`);
                  break;

                case "agent_result":
                  setAgentResults((prev) => [...prev, event.data]);
                  break;

                case "final_answer":
                  const assistantMessage: Message = {
                    role: "assistant",
                    content: event.data.answer || event.data,
                    timestamp: event.data.timestamp || new Date().toISOString(),
                    metadata: event.data,
                  };
                  setMessages((prev) => [...prev, assistantMessage]);
                  setCurrentStatus("");
                  setIsProcessing(false);
                  break;

                case "error":
                  console.error("Error:", event.data);
                  setCurrentStatus(`错误: ${event.data.message}`);
                  setIsProcessing(false);
                  break;

                case "done":
                  setIsProcessing(false);
                  setCurrentStatus("");
                  break;
              }
            } catch (e) {
              console.error("Failed to parse event:", e);
            }
          }
        }
      }
    } catch (error) {
      console.error("Error sending message:", error);
      setCurrentStatus("连接服务器失败，请检查后端是否运行");
      setIsProcessing(false);
    }
  };

  const getSignalColor = (signal: string) => {
    switch (signal?.toUpperCase()) {
      case "BULLISH":
        return "text-emerald-400 bg-emerald-500/20";
      case "BEARISH":
        return "text-red-400 bg-red-500/20";
      case "NEUTRAL":
        return "text-slate-400 bg-slate-500/20";
      default:
        return "text-slate-400 bg-slate-500/20";
    }
  };

  return (
    <div className="min-h-screen bg-slate-900 p-6">
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="mb-6">
          <div className="flex items-center gap-3 mb-2">
            <Sparkles className="w-8 h-8 text-blue-400" />
            <h1 className="text-3xl font-bold text-white">Research Chat</h1>
            <Badge className="bg-blue-500/20 text-blue-400 border-blue-500/50">
              Beta
            </Badge>
          </div>
          <p className="text-slate-400 text-sm">
            AI驱动的多维度加密货币市场研究平台
          </p>
        </div>

        {/* Main Chat Card */}
        <Card className="bg-gradient-to-br from-slate-900 to-slate-800 border-slate-700/50 shadow-xl">
          <CardContent className="p-0">
            {/* Chat Messages */}
            <div
              ref={chatContainerRef}
              className="h-[600px] overflow-y-auto p-6 space-y-4"
            >
              {messages.length === 0 && (
                <div className="h-full flex flex-col items-center justify-center text-center">
                  <Sparkles className="w-16 h-16 text-slate-600 mb-4" />
                  <h2 className="text-xl font-semibold text-slate-400 mb-2">
                    开始你的研究之旅
                  </h2>
                  <p className="text-slate-500 text-sm max-w-md">
                    询问任何关于加密货币市场的问题，我们的AI团队将为你提供多维度分析
                  </p>
                  <div className="mt-6 grid grid-cols-2 gap-3 w-full max-w-2xl">
                    {[
                      "现在适合买BTC吗？",
                      "分析当前BTC市场趋势",
                      "宏观经济环境如何影响加密货币？",
                      "BTC未来会涨吗？",
                    ].map((suggestion, idx) => (
                      <button
                        key={idx}
                        onClick={() => setInputMessage(suggestion)}
                        className="px-4 py-3 bg-slate-800/50 hover:bg-slate-700/50 border border-slate-700/50 rounded-lg text-slate-300 text-sm transition-colors text-left"
                      >
                        {suggestion}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {messages.map((message, idx) => (
                <div key={idx}>
                  {message.role === "user" ? (
                    // User message
                    <div className="flex justify-end">
                      <div className="bg-blue-600 text-white px-4 py-3 rounded-lg max-w-2xl">
                        {message.content}
                      </div>
                    </div>
                  ) : (
                    // Assistant message
                    <div className="flex justify-start">
                      <div className="bg-slate-800 text-slate-200 px-4 py-3 rounded-lg max-w-3xl border border-slate-700/50">
                        <div className="whitespace-pre-wrap">{message.content}</div>
                        {message.metadata && message.metadata.key_insights && (
                          <div className="mt-3 pt-3 border-t border-slate-700/50">
                            <p className="text-xs text-slate-400 mb-2">
                              关键洞察
                            </p>
                            <ul className="space-y-1">
                              {message.metadata.key_insights.map(
                                (insight: string, i: number) => (
                                  <li key={i} className="text-sm text-slate-300">
                                    • {insight}
                                  </li>
                                )
                              )}
                            </ul>
                          </div>
                        )}
                      </div>
                    </div>
                  )}
                </div>
              ))}

              {/* Processing Status */}
              {isProcessing && (
                <div className="space-y-4">
                  {/* Current Status */}
                  {currentStatus && (
                    <div className="flex items-center gap-2 text-slate-400 text-sm">
                      <Loader2 className="w-4 h-4 animate-spin" />
                      <span>{currentStatus}</span>
                    </div>
                  )}

                  {/* SuperAgent Decision */}
                  {superAgentDecision && (
                    <Card className="bg-slate-800/50 border-slate-700/50">
                      <CardHeader
                        className="pb-3 cursor-pointer"
                        onClick={() => toggleSection("super")}
                      >
                        <div className="flex items-center justify-between">
                          <div className="flex items-center gap-2">
                            <Zap className="w-4 h-4 text-yellow-400" />
                            <CardTitle className="text-sm text-slate-200">
                              SuperAgent 路由决策
                            </CardTitle>
                          </div>
                          {expandedSections.super ? (
                            <ChevronUp className="w-4 h-4 text-slate-400" />
                          ) : (
                            <ChevronDown className="w-4 h-4 text-slate-400" />
                          )}
                        </div>
                      </CardHeader>
                      {expandedSections.super && (
                        <CardContent className="pt-0">
                          <div className="text-sm space-y-2">
                            <div className="flex items-center gap-2">
                              <span className="text-slate-400">决策:</span>
                              <Badge
                                className={
                                  superAgentDecision.decision === "DIRECT_ANSWER"
                                    ? "bg-green-500/20 text-green-400"
                                    : "bg-blue-500/20 text-blue-400"
                                }
                              >
                                {superAgentDecision.decision === "DIRECT_ANSWER"
                                  ? "直接回答"
                                  : "转交Planning"}
                              </Badge>
                              <span className="text-slate-500 text-xs">
                                Confidence: {(superAgentDecision.confidence * 100).toFixed(0)}%
                              </span>
                            </div>
                            <p className="text-slate-400 text-xs">
                              {superAgentDecision.reasoning}
                            </p>
                          </div>
                        </CardContent>
                      )}
                    </Card>
                  )}

                  {/* Planning Result */}
                  {planningResult && (
                    <Card className="bg-slate-800/50 border-slate-700/50">
                      <CardHeader
                        className="pb-3 cursor-pointer"
                        onClick={() => toggleSection("planning")}
                      >
                        <div className="flex items-center justify-between">
                          <div className="flex items-center gap-2">
                            <Activity className="w-4 h-4 text-purple-400" />
                            <CardTitle className="text-sm text-slate-200">
                              PlanningAgent 任务规划
                            </CardTitle>
                          </div>
                          {expandedSections.planning ? (
                            <ChevronUp className="w-4 h-4 text-slate-400" />
                          ) : (
                            <ChevronDown className="w-4 h-4 text-slate-400" />
                          )}
                        </div>
                      </CardHeader>
                      {expandedSections.planning && (
                        <CardContent className="pt-0">
                          <div className="text-sm space-y-2">
                            <div className="space-y-1">
                              {planningResult.task_breakdown.analysis_phase.map(
                                (agent: any, i: number) => (
                                  <div
                                    key={i}
                                    className="flex items-center gap-2 text-xs"
                                  >
                                    <Badge
                                      className={`${
                                        agent.priority === "high"
                                          ? "bg-red-500/20 text-red-400"
                                          : "bg-slate-500/20 text-slate-400"
                                      }`}
                                    >
                                      {agent.agent}
                                    </Badge>
                                    <span className="text-slate-400">
                                      {agent.reason.substring(0, 60)}...
                                    </span>
                                  </div>
                                )
                              )}
                            </div>
                            <p className="text-slate-500 text-xs">
                              预计时间: {planningResult.execution_strategy.estimated_time}
                            </p>
                          </div>
                        </CardContent>
                      )}
                    </Card>
                  )}

                  {/* Agent Results */}
                  {agentResults.length > 0 && (
                    <div className="space-y-2">
                      {agentResults.map((result, i) => (
                        <Card
                          key={i}
                          className="bg-slate-800/50 border-slate-700/50"
                        >
                          <CardContent className="p-3">
                            <div className="flex items-center justify-between">
                              <div className="flex items-center gap-2">
                                <TrendingUp className="w-4 h-4 text-blue-400" />
                                <span className="text-sm font-medium text-slate-200">
                                  {result.agent_name}
                                </span>
                                <Badge className={getSignalColor(result.signal)}>
                                  {result.signal}
                                </Badge>
                              </div>
                              <span className="text-xs text-slate-500">
                                {(result.confidence * 100).toFixed(0)}% 信心
                              </span>
                            </div>
                            <p className="text-xs text-slate-400 mt-2">
                              {result.reasoning}
                            </p>
                          </CardContent>
                        </Card>
                      ))}
                    </div>
                  )}
                </div>
              )}

              <div ref={messagesEndRef} />
            </div>

            {/* Input Area */}
            <div className="border-t border-slate-700/50 p-4 bg-slate-900/50">
              <div className="flex gap-2">
                <Input
                  value={inputMessage}
                  onChange={(e) => setInputMessage(e.target.value)}
                  onKeyPress={(e) => e.key === "Enter" && handleSendMessage()}
                  placeholder="询问关于加密货币市场的任何问题..."
                  disabled={isProcessing}
                  className="flex-1 bg-slate-800 border-slate-700 text-white placeholder:text-slate-500 focus:border-blue-500"
                />
                <Button
                  onClick={handleSendMessage}
                  disabled={isProcessing || !inputMessage.trim()}
                  className="bg-blue-600 hover:bg-blue-700 text-white"
                >
                  {isProcessing ? (
                    <Loader2 className="w-4 h-4 animate-spin" />
                  ) : (
                    <Send className="w-4 h-4" />
                  )}
                </Button>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  );
};

export default ResearchChat;
